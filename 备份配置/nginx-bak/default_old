server {
        listen hengshan.biohermes.com:443;
        server_name hengshan.biohermes.com;
        root /var/www/hengshanv20/public;
        index index.php index.html index.htm;

        location / {
                try_files $uri $uri/ /index.php?$query_string;
        }

        location ~ \.php$ {
                try_files $uri =404;
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_pass unix:/run/php/php7.1-fpm.sock;
                fastcgi_index index.php;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                include fastcgi_params;
        }

	ssl on; 
    	ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4; 
    	ssl_protocols TLSv1 TLSv1.1 TLSv1.2; 
    	ssl_certificate /home/webdev/key_dir/1_hengshan.biohermes.com_bundle.crt;  
    	ssl_certificate_key /home/webdev/key_dir/2_hengshan.biohermes.com.key; 
}

